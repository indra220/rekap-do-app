{
  "name": "rekap-do-app",
  "version": "1.0.27",
  "description": "Aplikasi Rekapitulasi Delivery Order (DO) Pupuk",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"next dev\" \"cross-env WAITING_DIST=false electron .\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pack": "next build && electron-builder --dir",
    "dist": "next build && dotenv -- electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/indra220/rekap-do-app.git"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.4",
    "electron-serve": "^1.3.0",
    "electron-updater": "^6.7.3",
    "exceljs": "^4.4.0",
    "file-saver": "^2.0.5",
    "jspdf": "^4.1.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.475.0",
    "next": "^15.5.12",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^11.0.0",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.megaagrosanjaya.rekapdo",
    "productName": "Aplikasi Rekap DO",
    "directories": {
      "output": "../Aplikasi Rekap DO",
      "buildResources": "build"
    },
    "asar": true, 
    "asarUnpack": [
    "**/node_modules/better-sqlite3/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Aplikasi Rekap DO",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "uninstallDisplayName": "Uninstall Aplikasi Rekap DO",
      "differentialPackage": true,
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "unicode": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "indra220", 
        "repo": "rekap-do-app",
        "releaseType": "release",
        "private": true
      }
    ],
    "win": {
      "icon": "app/favicon.ico",
      "target": "nsis"
    },
    "files": [
      "out/**/*",
      "main.js",
      "package.json"
    ]
  }
}
